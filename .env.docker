# Docker Environment Variables
# Copy this to .env and update values for local development

# Django
SECRET_KEY=your-secret-key-here-generate-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
SITE_URL=http://localhost:8000

# Database (matches docker-compose.yml)
DATABASE_URL=postgresql://postgres:postgres@db:5432/eyehealth

# Redis (matches docker-compose.yml)
REDIS_URL=redis://redis:6379/0

# Email (for local testing, use console backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=EyeHealth <noreply@localhost>

# CORS (for local development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Optional
SUPPORT_EMAIL=support@localhost
LOG_LEVEL=DEBUG
