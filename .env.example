# ================================
# Django Configuration
# ================================
# SECURITY WARNING: Generate a new secret key for production!
# Use: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# Debug mode (NEVER set to True in production)
DEBUG=False

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ================================
# Database Configuration
# ================================
# For Railway: This will be auto-provided as DATABASE_URL
# Local development (SQLite): sqlite:///db.sqlite3
# PostgreSQL example: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=postgresql://user:password@localhost:5432/eyehealth_db

# Database connection pool settings (for PostgreSQL)
DB_CONN_MAX_AGE=600

# ================================
# Redis Configuration
# ================================
# For Railway: Use Railway Redis URL
# Local: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# ================================
# Email Configuration
# ================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=EyeHealth 20-20-20 <noreply@yourdomain.com>

# ================================
# CORS Settings
# ================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# ================================
# Security Settings
# ================================
# Session settings
SESSION_COOKIE_AGE=86400
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CSRF settings
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Lax
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL and Security Headers
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# ================================
# Google Calendar Integration (Optional)
# ================================
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALENDAR_PROJECT_ID=your-google-project-id
GOOGLE_CALENDAR_REDIRECT_URI=https://yourdomain.com/calendars/auth/google/callback/

# ================================
# Microsoft Calendar Integration (Optional)
# ================================
MICROSOFT_CALENDAR_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CALENDAR_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALENDAR_TENANT_ID=common

# ================================
# Logging
# ================================
LOG_LEVEL=INFO

# ================================
# Support & Monitoring (Optional)
# ================================
SUPPORT_EMAIL=support@yourdomain.com
ERROR_REPORTING_ENABLED=True

# Site URL (used in emails and absolute URLs)
SITE_URL=https://yourdomain.com

# Sentry Configuration (Optional - for error tracking)
# Get your DSN from https://sentry.io/
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

# ================================
# API Rate Limiting
# ================================
API_DEFAULT_RATE_LIMIT=100/h
API_AUTHENTICATED_RATE_LIMIT=1000/h
API_PREMIUM_RATE_LIMIT=5000/h

# ================================
# Cache Configuration
# ================================
# Increment this to invalidate all cached data
CACHE_VERSION=1
